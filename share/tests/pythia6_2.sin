# $Id: pythia6_2.sin 4937 2013-12-05 09:29:17Z jr_reuter $
# SINDARIN input for WHIZARD self-test
# Process g g -> u ubar

model = "SM"

?logging = true
?openmp_logging = false
?vis_history = false
?integration_timer = false
?pacify = true

me = 0
$method = "omega"
process pythia6_2_p1 = "e-", "e+" => "u", "ubar"

seed = 0

compile ()

$phs_method = "wood"
$integration_method = "vamp"

iterations = 3:1000:"g", 3:1000 
sqrts = 1000

cuts = all Pt > 100 [u:ubar]

!!! Tests should be run single-threaded 
openmp_num_threads = 1

integrate (pythia6_2_p1)

n_events = 1
?allow_shower = true
?ps_fsr_active = true
?ps_use_PYTHIA_shower = true
?hadronization_active = true
$sample = "pythia6_2"
sample_format = ascii
?sample_pacify = true
simulate (pythia6_2_p1)
