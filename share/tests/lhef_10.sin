# Sindarin input for WHIZARD self-test

model = "QCD"
$method = "omega"
$phs_method = "wood"
$integration_method = "vamp"

?logging = true
?openmp_logging = false
?vis_history = false
?integration_timer = false

?alpha_s_is_fixed = false
?alpha_s_from_mz = true

seed = 0

process lhef_10_p = "g", "g" => "u", "ubar"

sqrts = 8000
beams = p, p => pdf_builtin

cuts = all Pt > 50 [u:ubar]

!!! Tests should be run single-threaded 
openmp_num_threads = 1

n_events = 1
?unweighted = false
?read_raw = false
?write_raw = false

simulate (lhef_10_p) {
  sample_format = lhef, weight_stream
  $sample = "lhef_10a"
  ?keep_beams = true
  iterations = 1:1000
  scale = 100
}

! Recalculate with twice the coupling
rescan "lhef_10a" (lhef_10_p) {
  $rescan_input_format = "lhef"
  sample_format = weight_stream
  $sample = "lhef_10b"
  ?update_sqme = true
  scale = 200
}

! Recalculate with coupling from file, i.e., original coupling
rescan "lhef_10a" (lhef_10_p) {
  $rescan_input_format = "lhef"
  sample_format = weight_stream
  $sample = "lhef_10c"
  ?update_sqme = true
  scale = 200
  ?use_scale_from_file = true
}
