# SINDARIN input for WHIZARD self-test

model = SM

?logging = true
?openmp_logging = false
?vis_history = false
?integration_timer = false
?pacify = true

process tauola_1_p1 = e1, E1 => (e3, E3 )

compile

seed = 0
mH = 2000 GeV
wH = 10 GeV
?ps_fsr_active = true
?hadronization_active = true
$shower_method = "PYTHIA6"
?ps_taudec_active = true

polarized e3, E3, "W+", "W-", Z
?polarized_events = true

sqrts = 250 GeV

beams = e1, E1 => beam_events => isr
$beam_events_file = "uniform_spread_2.5%.dat"   ! => gives many warnings/errors
beams_pol_density = @(-1), @(+1)

iterations = 1:1000:"gw"
integrate ( tauola_1_p1 )

sample_format = stdhep_ev4
?write_raw = false
n_events = 1
$sample = "tauola_1_p1"
simulate ( tauola_1_p1 )
