# SINDARIN input for WHIZARD self-test
# Testing event generation from separate NLO components
# Testing only standard components, i.e. Born, Real and Virtual
# No Mismatch or Dglap

model = "SM"

?logging = true
?openmp_logging = false
?vis_history = false
?integration_timer = false
?pacify = true

$loop_me_method = "openloops"

openmp_num_threads = 1

?use_vamp_equivalences = false
?alpha_s_is_fixed = false
?alpha_s_from_mz = true

### The OpenLoops version installed might not be new enought to support Collier
?openloops_use_collier = false

seed = 2222
sqrts = 500 GeV

sample_format = lhef
?debug_decay = false
?debug_process = false
?debug_verbose = false
?sample_pacify = false
?write_raw = false

?fixed_order_nlo_events = true
?negative_weights = true
?unweighted = false

mtop = 173.2
wtop = 0.0

process nlo_5_p1 = E1, e1 => t, T { nlo_calculation = "Born" }

integrate (nlo_5_p1) { iterations = 1:1000:"gw" }
simulate (nlo_5_p1) { n_events = 1}

seed = 3333

process nlo_5_p2 = E1, e1 => t, T { nlo_calculation = "Real" }

integrate (nlo_5_p2) { iterations = 1:1000:"gw" }
simulate (nlo_5_p2) { n_events = 1}

seed = 4444

process nlo_5_p3 = E1, e1 => t, T { nlo_calculation = "Virtual" }

integrate (nlo_5_p3) { iterations = 1:1000:"gw" }
simulate (nlo_5_p3) { n_events = 1}
