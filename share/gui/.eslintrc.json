{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "env": {
    "mocha": true,
    "node": true,
    "browser": true,
    "shared-node-browser": true,
    "jquery": true
  },
  "rules": {
    "object-curly-spacing": [2, "never"],
    "no-console": ["error", { "allow": ["warn", "error"]}],
    "complexity": ["error", 5],
    "max-depth": ["error", 3],
    "max-params": ["error", 4],
    "max-nested-callbacks": ["error", 3],
    "max-statements": ["error", 20],
    "prefer-template": 0
  }
}
