model = SM
process eeuu = e1, E1 => u, U

compile

sqrts = 91 GeV
beams = e1, E1

?ps_fsr_active = true
?hadronization_active = false
$shower_method = "WHIZARD"

ps_max_n_flavors = 5
ps_mass_cutoff = 1
ps_fsr_lambda = 0.29

?mlm_matching = false

cuts = all M > 80 GeV [combine [u,U]]
       and all M < 100 GeV [combine [u,U]]

seed = 1

integrate (eeuu) { iterations = 2:2000 }

n_events = 100000

?rebuild_events = true
$sample = "EENoMatchingW"
sample_format = lhef

checkpoint = 2500

simulate (eeuu)

show (results)
