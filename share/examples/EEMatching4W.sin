model = SM
ms = 0
mc = 0
alias j = u:d:s:c:U:D:S:C:g
process eeuu = e1, E1 => u, U
process eeuuj = e1, E1 => u, U, j
process eeuujj = e1, E1 => u, U, j, j

compile

sqrts = 91 GeV
beams = e1, E1

?ps_fsr_active = true
?hadronization_active = false
?ps_use_PYTHIA_shower = false

ps_max_n_flavors = 5
ps_mass_cutoff = 1
ps_fsr_lambda = 0.29

?mlm_matching = true
mlm_nmaxMEjets = 4
mlm_Rmin = 1
mlm_ETclusminE = 10 GeV
real ycut = mlm_ETclusminE**2

cuts = all kT > ycut [j, j]
     
seed = 1

integrate (eeuu, eeuuj, eeuujj) { iterations = 2:2000 }

n_events = 100000

?rebuild_events = true
$sample = "EEMatching4W"
sample_format = lhef

checkpoint = 2500

simulate (eeuu, eeuuj, eeuujj)

show (results)
