#!/bin/sh
### Check the WHIZARD configuration by executing a unit test
### Usage: run_whizard_ut.sh [OPTIONS]

# Make sure the path to the installed version is completely known
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@

# Run either the local version or the installed version of WHIZARD
export OMP_NUM_THREADS
OMP_NUM_THREADS=1
if test -f TESTFLAG; then
  @DYLD_FLAGS@
  ../../src/whizard_ut --no-banner $*
else
  $bindir/whizard_ut --no-banner $*
fi
