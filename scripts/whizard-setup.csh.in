set prefix = @prefix@
set exec_prefix = @exec_prefix@
set bindir = @bindir@
set PKGLIBDIR = @PKGLIBDIR@

if !($?PATH) then
    setenv PATH ${bindir}
else
    setenv PATH ${bindir}:${PATH}
endif

if !($?LD_LIBRARY_PATH) then
    setenv LD_LIBRARY_PATH ${PKGLIBDIR}
else
    setenv LD_LIBRARY_PATH ${PKGLIBDIR}:${LD_LIBRARY_PATH}
endif
