#! /bin/sh
########################################################################

jobs=
jobs="-j 6"

cd ../_build_mf/tests || exit 1
ln -f ../../tests/omf.sty \
      ../../tests/QCD.omf ../../tests/QCD.tex \
      ../../tests/SM.omf ../../tests/SM.tex \
      ../../tests/SM-error.omf .

pdflatex -interaction=batchmode -halt-on-error QCD
pdflatex -interaction=batchmode -halt-on-error SM

make -C ../src $jobs || exit 1
make -C ../tests vertex_unit $jobs || exit 1

./vertex_unit "$@"
  
